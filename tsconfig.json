{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths":{
      "prosemirror-view":["./prosemirror/prosemirror-view/index"],
      "prosemirror-model":["./prosemirror/prosemirror-model/index"],
      "prosemirror-transform":["./prosemirror/prosemirror-transform/index"],
      "prosemirror-state":["./prosemirror/prosemirror-state/index"],
      "prosemirror-schema-basic":["./prosemirror/prosemirror-schema-basic/schema-basic"],
      "prosemirror-keymap":["./prosemirror/prosemirror-keymap/keymap"],
      "prosemirror-inputrules":["./prosemirror/prosemirror-inputrules/index"],
      "prosemirror-commands":["./prosemirror/prosemirror-commands/commands"],
      "prosemirror-history":["./prosemirror/prosemirror-history/history"],
      "prosemirror-dropcursor":["./prosemirror/prosemirror-dropcursor/dropcursor"],
      "prosemirror-gapcursor":["./prosemirror/prosemirror-gapcursor/index"],
      "prosemirror-menu":["./prosemirror/prosemirror-menu/index"],
      "prosemirror-schema-list":["./prosemirror/prosemirror-schema-list/schema-list"],

      "prosemirror-mermaid":["./plugins/prosemirror-mermaid/index"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "prosemirror", "plugins"]
}
